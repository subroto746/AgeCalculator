<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/relative"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:background="@drawable/relativeback"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:hint="DD/MM/YYYY"
                android:textColor="#C2185B"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/birth"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:hint="DD/MM/YYYY"
                android:textColor="#C2185B"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="18dp"
                android:text="Date Of Birth"
                android:textColor="@color/DateOfBirth"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="101dp"
                android:text="Today's Date"
                android:textColor="@color/DateOfBirth"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="15dp"
                android:background="#33691E"
                android:text="CALCULATE"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@+id/button"
                android:background="#33691E"
                android:text="CLEAR"
                android:textStyle="bold" />


        </RelativeLayout>


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="23dp"
            android:text="YEARS : "
            android:textColor="#8E24AA"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="88dp"
            android:text="MONTHS : "
            android:textColor="#8E24AA"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="150dp"
            android:text="DAYS : "
            android:textColor="#8E24AA"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="23dp"
            android:textColor="#FFFFFF"
            android:textSize="25dp"

            />

        <TextView
            android:id="@+id/months"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="88dp"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="150dp"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative"
            android:layout_marginTop="210dp"
            android:text="Detail Calculation: "
            android:textColor="@color/DateOfBirth"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="530dp"
            android:background="@drawable/relativeback"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">


            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="150dp"
                android:background="#9E9E9E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="100dp"
                android:text="Total Years :"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginRight="100dp"
                android:text="Total Months :"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginRight="100dp"
                android:text="Total Weeks :"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="155dp"
                android:layout_marginRight="100dp"
                android:text="Total Days :"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginRight="100dp"
                android:text="Total Hours :"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="245dp"
                android:layout_marginRight="100dp"
                android:text="Total Minutes :"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="290dp"
                android:layout_marginRight="100dp"
                android:text="Total Seconds :"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/TotalYearsAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/TotalMonthsAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="65dp"
                android:layout_marginRight="30dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/TotalWeeksAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="110dp"
                android:layout_marginRight="30dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/TotalDaysAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="155dp"
                android:layout_marginRight="30dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/TotalHoursAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="200dp"
                android:layout_marginRight="30dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/TotalMinutesAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="245dp"
                android:layout_marginRight="30dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/TotalSecondAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="290dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>